<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/VTextViewAnzeige"
        android:layout_width="139dp"
        android:layout_height="87dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="229dp"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/RPMTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VTextView" />

    <TextView
        android:id="@+id/tTextViewAnzeige"
        android:layout_width="76dp"
        android:layout_height="21dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="103dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonReport"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tTextView" />

    <TextView
        android:id="@+id/RPMTextViewAnzeige"
        android:layout_width="139dp"
        android:layout_height="87dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="229dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RPMTextView" />

    <TextView
        android:id="@+id/VTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="12dp"
        android:text="Geschwindigkeit:"
        app:layout_constraintBottom_toTopOf="@+id/VTextViewAnzeige"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41000003" />

    <TextView
        android:id="@+id/tTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="285dp"
        android:text="Laufzeit:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/up" />

    <TextView
        android:id="@+id/RPMTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="309dp"
        android:text="Drehzahl:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/VTextViewAnzeige" />

    <Button
        android:id="@+id/buttonReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginTop="651dp"
        android:layout_marginBottom="32dp"
        android:text="Report anzeigen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tTextViewAnzeige"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/up"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="114dp"
        android:background="#008BC34A"
        android:backgroundTint="#8BC34A"
        android:tint="#8BC34A"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/tTextView"
        app:layout_constraintEnd_toStartOf="@+id/down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RPMTextViewAnzeige"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <ImageView
        android:id="@+id/down"
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="144dp"
        android:background="#F44336"
        android:backgroundTint="#00F44336"
        android:baselineAlignBottom="false"
        android:clickable="false"
        android:tint="#F44336"
        app:layout_constraintBottom_toTopOf="@+id/tTextViewAnzeige"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/up"
        app:layout_constraintTop_toBottomOf="@+id/RPMTextViewAnzeige"
        app:srcCompat="@android:drawable/arrow_down_float" />


</android.support.constraint.ConstraintLayout>